				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 201\", function () {\r",
							"  pm.response.to.have.status(201);\r",
							"});\r",
							"\r",
							"pm.test(\"Response check\", () => {\r",
							"\r",
							"    const responseJson = pm.response.json();\r",
							"    pm.expect(responseJson.access_token).to.be.not.null;\r",
							"    pm.expect(responseJson.access_token).to.be.not.undefined;\r",
							"    pm.expect(responseJson.user.id).to.be.greaterThan(0);\r",
							"    pm.expect(responseJson.user.username).to.be.equal('backendLoginTestUserName')\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"username\": \"backendLoginTestUserName\",\r\n    \"password\": \"backendLoginTestUserPassword\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{url}}/auth/login",
